<Window x:Class="UsuariosEXMN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Empleados - Sistema CRM"
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid Margin="10">

        <GroupBox Header="Datos del Empleado"
                  Foreground="White"
                  BorderBrush="White"
                  FontSize="14"
                  Margin="0,0,0,80">

            <Grid Margin="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <Label Content="Employee ID:" Grid.Row="0" Foreground="White"/>
                <TextBox x:Name="txtID"
                         Grid.Row="0" Grid.Column="1"
                         Background="#D1D1D1" Width="150" Margin="0,0,250,0"/>

                <Label Content="Nombre:" Grid.Row="1" Foreground="White"/>
                <TextBox x:Name="txtFirstName"
                         Grid.Row="1" Grid.Column="1"
                         Background="#D1D1D1"/>

                <Label Content="Apellido:" Grid.Row="2" Foreground="White"/>
                <TextBox x:Name="txtLastName"
                         Grid.Row="2" Grid.Column="1"
                         Background="#D1D1D1"/>

                <Label Content="Título:" Grid.Row="3" Foreground="White"/>
                <TextBox x:Name="txtTitle"
                         Grid.Row="3" Grid.Column="1"
                         Background="#D1D1D1"/>

                <Label Content="Dirección:" Grid.Row="4" Foreground="White"/>
                <TextBox x:Name="txtAddress"
                         Grid.Row="4" Grid.Column="1"
                         Background="#D1D1D1"/>

                <Label Content="Ciudad:" Grid.Row="5" Foreground="White"/>
                <TextBox x:Name="txtCity"
                         Grid.Row="5"
                         Background="#D1D1D1" Margin="0,0,200,0" Grid.Column="1"/>

                <Label Content="Región:" Grid.Row="6" Foreground="White"/>
                <TextBox x:Name="txtRegion"
                         Grid.Row="6" Grid.Column="1"
                         Background="#D1D1D1" Margin="0,0,200,0"/>

                <Label Content="Código Postal:" Grid.Row="7" Foreground="White"/>
                <TextBox x:Name="txtPostalCode"
                         Grid.Row="7" Grid.Column="1"
                         Background="#D1D1D1" Margin="0,0,250,0"/>

                <Label Content="País:" Grid.Row="8" Foreground="White"/>
                <TextBox x:Name="txtCountry"
                         Grid.Row="8" Grid.Column="1"
                         Background="#D1D1D1" Margin="0,0,200,0"/>

                <Label Content="Teléfono:" Grid.Row="9" Foreground="White"/>
                <TextBox x:Name="txtHomePhone"
                         Grid.Row="9" Grid.Column="1"
                         Background="#D1D1D1" Margin="0,0,200,0"/>

                <Label Content="Extensión:" Grid.Row="10" Foreground="White"/>
                <TextBox x:Name="txtExtension"
                         Grid.Row="10" Grid.Column="1"
                         Background="#D1D1D1" Margin="0,0,200,0"/>

            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,40">

            <Button Content="Insertar Empleado"
                    Width="150" Height="35" Margin="10"
                    Background="#3A3A3A" Foreground="White"
                    Click="Insertar_Click"/>

            <Button Content="Cargar Empleado"
                    Width="150" Height="35" Margin="10"
                    Background="#3A3A3A" Foreground="White"
                    Click="Cargar_Click"/>

            <Button Content="Actualizar Empleado"
                    Width="150" Height="35" Margin="10"
                    Background="#3A3A3A" Foreground="White"
                    Click="Actualizar_Click"/>

            <Button Content="Eliminar Empleado"
                    Width="150" Height="35" Margin="10"
                    Background="#3A3A3A" Foreground="White"
                    Click="Eliminar_Click"/>
        </StackPanel>

        <TextBlock x:Name="lblEstado"
                   Text="Listo para operar"
                   Foreground="White"
                   FontSize="14"
                   Margin="10"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"/>

    </Grid>
</Window>
